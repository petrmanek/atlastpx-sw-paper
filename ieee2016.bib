volume = "563",
number = "1",
pages = "254 - 258",
year = "2006",
note = "Proceedings of the 7th International Workshop on Radiation Imaging Detectors IWORID 2005, 7th International Workshop on Radiation Imaging Detectors ",
issn = "0168-9002",
