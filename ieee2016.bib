@article{Vykydal2009,
title = "{The Medipix2-based network for measurement of spectral characteristics and composition of radiation in ATLAS detector}",
journal = "Nuclear Instruments and Methods in Physics Research Section A: Accelerators, Spectrometers, Detectors and Associated Equipment ",
volume = "607",
number = "1",
pages = "35 - 37",
year = "2009",
note = "Radiation Imaging Detectors 2008Proceedings of the 10th International Workshop on Radiation Imaging Detectors ",
issn = "0168-9002",
